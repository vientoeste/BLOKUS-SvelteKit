		"@types/events": "^3.0.3",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^24.3.0",
		"@types/ws": "^8.5.12",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.38.0",
