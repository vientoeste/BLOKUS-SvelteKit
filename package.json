		"jest": "^29.7.0",
		"jsonwebtoken": "^9.0.0",
		"mongodb": "^5.3.0",
		"redis": "^4.7.0",
		"redis-om": "^0.4.7",
		"ts-jest": "^29.2.5",
		"uuidv7": "^1.0.2",
