{
  "include": [
    "src/websocket/**/*",
    "src/lib/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/routes",
    "src/lib/!(types)**/*"
  ],
  "compilerOptions": {
    "paths": {
      "$types/*": [
        "./src/lib/types/*"
      ]
    },
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "ignoreDeprecations": "5.0",
    "rootDir": "src"
  }
}